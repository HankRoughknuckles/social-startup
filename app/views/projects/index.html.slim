- provide :title, "#{@user.first_name}'s projects"
p#notice= notice
h1
  = @user.full_name.possessive
  |  Projects
table
  thead
    tr
      th Name
      th colspan="3" 
  tbody.projects
    - @projects.each do |project|
      tr class="project_#{project.id}" 
        td
          = link_to user_project_path(current_user, project) do
            = image_tag project.project_image(:thumb)
            span.name= project.name
        td= link_to 'Edit', edit_user_project_path(current_user, project)
        td= link_to 'Destroy', user_project_path(current_user, project), method: :delete, confirm: 'Are you sure?'  
br/
= link_to 'New Project', new_user_project_path(current_user), class: "add_project"
