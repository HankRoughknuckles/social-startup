<ul class="list-group">
  <% @user.posts.reverse.each do |post| %>
    <li class="list-group-item">
      <h4>
        <%= link_to post.user.full_name, post.user %> <small><%= time_ago_in_words(post.created_at) unless post.created_at.blank? %> ago</small>
      </h4>
      <div>
        <%= post.body %>
      </div>
    </li>
  <% end %>
</ul>
